// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id                  String               @id @default(cuid())
  name                String?
  email               String               @unique
  emailVerified       DateTime?
  image               String?
  accounts            Account[]
  sessions            Session[]
  tasks               Task[]
  tags                Tag[]
  calendarEvents      CalendarEvent[]
  calendarConnections CalendarConnection[] @relation("UserCalendarConnections")
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Task {
  id             String          @id @default(cuid())
  title          String
  description    String?
  status         String          @default("backlog")
  scheduledDate  DateTime?
  deadlineType   String?
  deadlineSetAt  DateTime?
  duration       Int?            // Duration in minutes
  order          Int             @default(0)
  completedAt    DateTime?
  userId         String
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  tagId          String?
  tag            Tag?            @relation(fields: [tagId], references: [id], onDelete: SetNull)
  calendarEvents CalendarEvent[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@index([userId, status])
  @@index([scheduledDate])
  @@index([tagId])
}

model Tag {
  id         String   @id @default(cuid())
  name       String
  color      String   @default("#E17C4F")
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks      Task[]
  
  // Hierarchy: channels (parentId = null) and sub-channels (parentId = channel id)
  isPersonal Boolean  @default(false)
  isDefault  Boolean  @default(false)
  parentId   String?
  parent     Tag?     @relation("TagHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children   Tag[]    @relation("TagHierarchy")
  
  createdAt  DateTime @default(now())

  @@unique([userId, name])
  @@index([userId, parentId])
}

model CalendarEvent {
  id           String              @id @default(cuid())
  title        String
  description  String?
  startTime    DateTime
  endTime      DateTime
  taskId       String?
  task         Task?               @relation(fields: [taskId], references: [id], onDelete: SetNull)
  userId       String
  user         User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  color        String?
  isCompleted  Boolean             @default(false)
  source       String              @default("miniorg") // "miniorg" | "google" | "outlook"
  externalId   String?             // ID de l'event chez le provider
  connectionId String?             // Lien vers CalendarConnection
  connection   CalendarConnection? @relation(fields: [connectionId], references: [id], onDelete: SetNull)
  lastSyncedAt DateTime?           // Dernière fois que l'event a été synced
  syncStatus   String?             // "synced" | "pending" | "error"
  syncError    String?             // Message d'erreur si sync échoue
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt

  @@unique([externalId, connectionId])
  @@index([userId, startTime])
  @@index([taskId])
  @@index([externalId])
  @@index([connectionId])
}

model CalendarConnection {
  id                String          @id @default(cuid())
  userId            String
  user              User            @relation("UserCalendarConnections", fields: [userId], references: [id], onDelete: Cascade)
  provider          String          // "google" | "outlook" | "apple"
  providerAccountId String          // ID du compte chez le provider
  name              String          // Nom du calendrier (ex: "Work Calendar")
  calendarId        String          // ID du calendrier chez le provider
  accessToken       String?         // Token d'accès
  refreshToken      String?         // Token de refresh
  expiresAt         DateTime?       // Expiration du token
  isActive          Boolean         @default(true) // Calendrier visible dans la timeline
  isExportTarget    Boolean         @default(false) // Calendrier d'export par défaut
  lastSyncAt        DateTime?       // Dernière sync réussie
  syncToken         String?         // Token de sync incrémentale (Google)
  calendarEvents    CalendarEvent[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@unique([userId, provider, calendarId])
  @@index([userId, isActive])
}
