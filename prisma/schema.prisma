// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  runtime  = "workerd"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  tasks         Task[]
  tags          Tag[]
  calendarEvents CalendarEvent[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Task {
  id            String          @id @default(cuid())
  title         String
  description   String?
  status        String          @default("backlog")
  scheduledDate DateTime?
  deadlineType  String?
  deadlineSetAt DateTime?
  duration      Int?            // Duration in minutes
  order         Int             @default(0)
  completedAt   DateTime?
  userId        String
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags          Tag[]           @relation("TaskTags")
  calendarEvents CalendarEvent[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([userId, status])
  @@index([scheduledDate])
}

model Tag {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#E17C4F")
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     Task[]   @relation("TaskTags")
  createdAt DateTime @default(now())

  @@unique([userId, name])
}

model CalendarEvent {
  id          String    @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  taskId      String?
  task        Task?     @relation(fields: [taskId], references: [id], onDelete: SetNull)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  color       String?
  isCompleted Boolean   @default(false)
  source      String    @default("miniorg") // "miniorg" | "google" | "outlook"
  externalId  String?   // For future sync with external calendars
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId, startTime])
  @@index([taskId])
}
