{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MiniOrg",
  "version": "0.1.0",
  "identifier": "com.miniorg.app",
  "build": {
    "beforeBuildCommand": "BUILD_TARGET=tauri npm run build",
    "beforeDevCommand": "BUILD_TARGET=tauri npm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "MiniOrg",
        "width": 1200,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "dragDropEnabled": false
      },
      {
        "label": "quick-add",
        "title": "Quick Add Task",
        "center": true,
        "visibleOnAllWorkspaces": true,
        "resizable": false,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "focus": true,
        "shadow": false
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["miniorg"]
      }
    }
  }
}
